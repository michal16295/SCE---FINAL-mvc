
@using Microsoft.AspNet.Identity;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title MD-University</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/template/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/template/css/myModal.css">

    <link rel="stylesheet" href="~/Content/template/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/template/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Content/template/css/owl.theme.default.min.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Content/template/css/templatemo-style.css">
</head>

<body>
   
    <div class="navbar custom-navbar navbar-fixed-top" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>

                <!-- lOGO TEXT HERE -->
                <a class="navbar-brand">MD-University</a>
                
            </div>

            <!-- MENU LINKS -->
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-nav-first">
                    <li class="smoothScroll">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="smoothScroll">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (Roles.IsUserInRole(User.Identity.Name, "Admin"))
                    {
                        <li class="smoothScroll">@Html.ActionLink("Students", "Students", "Users")</li>
                        <li class="smoothScroll">@Html.ActionLink("Lecturers", "Lecturers", "Users")</li>
                        <li class="smoothScroll">@Html.ActionLink("Courses", "index", "Courses")</li>
                    }
                    @if (Roles.IsUserInRole(User.Identity.Name, "Student"))
                    {
                        <li class="smoothScroll">@Html.ActionLink("My Courses", "Details", "Users", new { id = User.Identity.GetUserId() }, null)</li>
                        <li class="smoothScroll">@Html.ActionLink("My Exams", "MyExams", "Exams")</li>
                    }
                    @if (Roles.IsUserInRole(User.Identity.Name, "Lecturer"))
                    {
                        <li class="smoothScroll">@Html.ActionLink("My Courses", "Details", "Users", new { id = User.Identity.GetUserId() }, null)</li>
                        <li class="smoothScroll">@Html.ActionLink("My Exams", "MyExams", "Exams")</li>
                    }
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>

